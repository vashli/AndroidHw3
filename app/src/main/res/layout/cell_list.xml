<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cell_list_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/png" />

    <TextView
        android:id="@+id/cell_list_file_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        android:textColor="@color/colorTxtDark"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/cell_list_icon"
        app:layout_constraintTop_toTopOf="@+id/cell_list_icon" />

    <TextView
        android:id="@+id/cell_list_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="12sp"
        android:textColor="@color/colorTxtLight"
        app:layout_constraintBottom_toBottomOf="@+id/cell_list_icon"
        app:layout_constraintStart_toStartOf="@+id/cell_list_file_name" />

    <TextView
        android:id="@+id/cell_list_size_dim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:text="TextView"
        android:textColor="@color/colorTxtLight"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/cell_list_size"
        app:layout_constraintStart_toEndOf="@+id/cell_list_size" />

    <TextView
        android:id="@+id/cell_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="TextView"
        android:textColor="@color/colorTxtLight"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/cell_list_size"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>